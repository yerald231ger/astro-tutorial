---
import Main from "../components/Main.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
import NewHeader from "../components/NewHeader.astro";
---

<div class="flex min-h-screen bg-[#0f172a] w-full">
  <!-- Top Navigation Bar - Full width -->
  <NewHeader />

  <!-- Main content wrapper -->
  <div class="flex w-full pt-16">
    <!-- Added padding-top for the fixed header -->
    <!-- Sidebar - Full height including under the top bar -->
    <Sidebar />
    <!-- Main Content with margin to account for sidebar -->
    <Main />
  </div>
</div>
